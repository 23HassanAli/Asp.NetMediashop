@model IEnumerable<PXLPRO2023Shoppers24.Models.Laptop>
@{
    ViewData["Title"] = "Home Page";
}
@*<p>
    User id : @ViewData["UserId"]
</p>*@
<div class="container">
    <div class="row" style="padding: 50px;">
        <div class="col-md-6 d-flex align-items-center">
            <div class="text-dark">
                <h1 class="display-4 mb-4">Discover the Latest</h1>
                <p class="lead mb-4">Experience the power of our new laptop, with lightning-fast processing and ample storage for all your important files. Enjoy stunning graphics and crystal-clear audio for movies, music, and games. And with a comfortable backlit keyboard, you can work or play anytime, anywhere.</p>
                <a asp-controller="Laptop" asp-action="Index" class="btn btn-success btn-lg">Learn More</a>
            </div>
        </div>
        <div class="col-md-6">
            <div id="carouselExampleSlidesOnly" class="carousel slide" data-bs-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="https://image.coolblue.be/max/500x500/products/1780160" style="background-color:transparent;width:450px" class="d-block" alt="Product image">
                    </div>
                    <div class="carousel-item">
                        <img src="https://image.coolblue.be/600x315/products/874937" style="background-color:transparent;width:450px" class="d-block" alt="Product image">
                    </div>
                    <div class="carousel-item">
                        <img src="https://image.coolblue.be/max/500x500/products/1858978" style="background-color:transparent;width:450px" class="d-block " alt="Product image">
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12 text-center">
            <h2 class="mb-5">Featured Laptops</h2>
        </div>
    </div>
    <div class="row">

        @await Component.InvokeAsync("FeaturedLaptops")

    </div>
</div>




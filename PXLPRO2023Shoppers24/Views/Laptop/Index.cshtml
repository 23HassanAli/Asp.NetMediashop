@model IEnumerable<PXLPRO2023Shoppers24.Models.Laptop>

@{
    ViewData["Title"] = "Laptops";
}
<h1>All laptops</h1>
<p>
    <a asp-action="Create">Create New</a>
</p>
@foreach (var item in Model)
{
    <div class="container border my-5">
        <div class="row mx-auto p-3">
            <div class="col-md-4">
                <img src="@item.ImageURL" class="img-fluid rounded" alt="laptop image">
            </div>
            <div class="col-md-8">
                <div class="row mb-4">
                    <h2 class="text-primary font-weight-bold">@item.Name</h2>
                </div>
                <div class="row mb-4">
                    <p class="text-secondary">@item.ScreenSize inches | @item.Processor | @item.InternalRAM GB RAM</p>
                </div>
                <div class="row mb-4">
                    <h3 class="text-dark font-weight-bold">@item.Price,-</h3>
                </div>
                <div class="row mb-4">
                    <p class="text-success font-weight-bold">In Stock: @item.StockQuantity</p>
                </div>
                <div class="row">
                    <a href="@Url.Action("AddItemToShoppingCart", "Order", new { id = item.Id })" class="btn btn-success btn-lg rounded-pill"><i class="bi bi-cart-plus"></i> Add to Cart</a>
                </div>
                <div class="row mt-4">
                    <div class="col-md-4">
                        <a href="@Url.Action("Edit", new { id = item.Id })" class="btn btn-primary btn-sm">Edit</a>
                    </div>
                    <div class="col-md-4">
                        <a href="@Url.Action("Details", new { id = item.Id })" class="btn btn-secondary btn-sm">Details</a>
                    </div>
                    <div class="col-md-4">
                        <a href="@Url.Action("Delete", new { id = item.Id })" class="btn btn-danger btn-sm">Delete</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
}


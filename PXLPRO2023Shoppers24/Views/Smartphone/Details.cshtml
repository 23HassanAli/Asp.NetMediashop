@model PXLPRO2023Shoppers24.Models.Smartphone

@{
    ViewData["Title"] = "Details";
}

<a asp-controller="Smartphone" asp-action="index" class="" style="color:forestgreen"> <i class='bi bi-angle-left'></i>Back</a>

<div class="container-fluid">
    <div class="col">
        <div class="row">
            <h1 style="color:blueviolet;font-size:30px">@Model.Name</h1>
        </div>
        <div class="row">
            <div class="col-1">
                @Model.Brand
            </div>
            <div class="col-5">
                <img src="@Model.ImageURL" alt="@Model.Name" style="width:180px" />
            </div>
            <div class="col-6">
                <dl class="row">
                    <dt class="col-sm-2">
                        Total Storage
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.TotalStorageCapacity) GB
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Type)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Type)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Price)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Price),-
                    </dd>
                    <dt class="col-sm-2">
                        Available smartphones
                    </dt>
                    <dd class="col-sm-10" style="color:forestgreen">
                        @Html.DisplayFor(model => model.StockQuantity)
                    </dd>
                </dl>
                @*
                <div class="row">Procsessor @Model.Processor</div>
                <div class="row">Price      @Model.Price,-</div>
                <div class="row" style="color:forestgreen">
                Laptops available    @Model.StockQuantity
                </div>*@
                <div class="row">
                    <a class="btn btn-success text-white mt-5" style="width:100px"> <i class="bi bi-cart-plus"></i> Shop</a>
                </div>
                <div class="row">
                    <div class="col-4"><a asp-action="Edit" asp-route-id="@Model.Id">Edit</a></div>
                    <div class="col-4"><a asp-action="Details" asp-route-id="@Model.Id">Details</a></div>
                    <div class="col-4"><a asp-action="Delete" asp-route-id="@Model.Id">Delete</a></div>
                </div>
            </div>
        </div>
        <div class="row mt-4">
            <h3>Description</h3>
            <p>
                @Model.Description
            </p>
        </div>
    </div>
</div>